{
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src/",
    "paths": {
      "@actions/*": ["actions/*"],
      "@api/*": ["api/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@navigation/*": ["navigation/*"],
      "@reducers/*": ["reducers/*"],
      "@screens/*": ["screens/*"],
      "@selectors/*": ["selectors/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "include": ["src"]
}
